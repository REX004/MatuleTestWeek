<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="lineHeight">32.75dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="description_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sub_text_dark</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="edit_text_main">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="button">
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>